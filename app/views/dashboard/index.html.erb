<%= render '/layouts/nav' %>

<div class="content">
  <div class="row">
    <div class="panel panel-primary col-md-3">
      <div class="panel-heading">
        <i class="fa fa-facebook fa-3x"></i>

        <h1>Likes</h1>
      </div>
      <div class="panel-footer">
        <%= $likes %>
      </div>
    </div>

    <div class="panel panel-green col-md-3">
      <div class="panel-heading">
        <i class="fa fa-usd fa-3x"></i>

        <h1>Currencies</h1>
      </div>
      <div class="panel-footer">
        <div class="table-responsive">
          <table class="table table">
            <tr>
              <td><p><i class="fa fa-btc"></i> USD</p></td>
              <td><p><%= @price %></p></td>
            </tr>
            <tr>
              <td><p><i class="fa fa-usd"></i> USD</p></td>
              <td><p><%= $usd %></p></td>
            </tr>
            <tr>
              <td><p><i class="fa fa-eur"></i> EUR</p></td>
              <td><p><%= $eur %></p></td>
            </tr>
            <tr>
              <td><p><i class="fa fa-cny"></i> CNY</p></td>
              <td><p><%= $cny %></p></td>
            </tr>
            <tr>
              <td><p><i class="fa fa-gbp"></i> GBP</p></td>
              <td><p><%= $gbp %></p></td>
            </tr>
          </table>
        </div>
      </div>
    </div>

    <div class="panel panel-red col-md-3">
      <div class="panel-heading">
        <i class="fa fa-newspaper-o fa-3x"></i>

        <h1>News</h1>
      </div>
      <div class="panel-footer">
        <%= $news.html_safe %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    $(function () {
        $('.content > ').sortable({
            items: "> .panel",
            handle: "> .panel-heading",
            snap: true,
            containment: ".content",
            cursor: "move"
        });
    });
</script>
