<div class="row">
  <div class="col-lg-12 login">
    <h1>Sign up</h1>
    <hr>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
        <%= devise_error_messages! %>
        <div class="form-group">
            <%= form.label :email %>
            <%= form.email_field :email, autofocus: true, class: 'form-control rounded-corners' %>

          <%= form.label :password %>
          <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i>
          <% end %>
          <%= form.password_field :password, autocomplete: 'off', class: 'form-control rounded-corners' %>

          <%= form.label :password_confirmation %>
          <%= form.password_field :password_confirmation, autocomplete: 'off', class: 'form-control rounded-corners' %>
        </div>

        <%= form.submit 'Sign up', class: 'btn btn-default' %>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>