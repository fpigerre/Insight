<div class="row">
  <div class="col-lg-12 login">
    <h1>Insight</h1>
    <hr>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon rounded-corners">@</div>
            <%= form.email_field :email, autofocus: true, class: 'form-control rounded-corners' %>
          </div>
          <%= form.password_field :password, autocomplete: 'off', class: 'form-control rounded-corners' %>
        </div>
        <div style="display: none"><%= form.submit %></div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
    $('form').addClass("form-inline");
</script>