<div class="row content">
  <div class="col-lg-12 login">
    <h1>Insight</h1>
    <hr>
    <form role="form" class="form-inline">
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon rounded-corners"><strong>@</strong></div>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
              <%= devise_error_messages! %>

              <%= form.email_field :email, class: 'form-control rounded-corners', placeholder: 'Email' %>
              </div>
              <%= form.password_field :password, class: 'form-control rounded-corners', placeholder: 'Password' %>
              </div>
          <% end %>
          </form>
  </div>
</div>